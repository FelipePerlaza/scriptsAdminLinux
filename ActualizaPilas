clear
echo " Inicio de actualizacion de las cajas " >/u/reporte/logtime
date "+%B %d %Y  %k:%M:%S" >>/u/reporte/logtime
echo  "" >>/u/reporte/logtime
date >/u/reporte/logfile
cona=0

echo " Programa para la actualizacion de sucurdales"
 	     for file in `cat /u/procesos85/ListaSucursales`
              do
                    cona=`expr $cona + 1`
                    arcca=`expr $arcca + 1`
 		    echo "Copiando   $file  a Las pilas "
		    rcp -r $file SerPilas:/u/uno/uno85c/mcinter/datos/
 		    echo "Copiando  $file a Las pilas " >>/u/reporte/logfile
              done
	     echo  " Hora en que termina Las pilas " >>/u/reporte/logtime
             date "+%k:%M:%S" >>/u/reporte/logtime
	     echo  "" >>/u/reporte/logtime
	     echo  "" >>/u/reporte/logtime
echo " Termina la actualizacion  de Sucursal Las Pilas " >>/u/reporte/logtime
date "+%B %d %Y  %k:%M:%S" >>/u/reporte/logtime
echo  "" >>/u/reporte/logtime
clear
